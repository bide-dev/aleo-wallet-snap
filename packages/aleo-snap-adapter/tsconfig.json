{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "build/",
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["es2020", "dom"],
    "typeRoots": ["../../node_modules/@types", "./src/types"],
    "types": ["node"],
  }
}
